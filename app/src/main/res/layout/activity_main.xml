<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.asu.msse.hjshah2.geoplacedescription.MainActivity">


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:rowCount="9"
        android:columnCount="2">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/displayName"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_row="0"
            android:layout_columnSpan="2"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/displayDescription"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_row="1"
            android:layout_columnSpan="2"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text=" Category"
            android:id="@+id/Category"
            android:layout_alignParentStart="true"
            android:layout_row="2"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/displayCategory"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_row="2" />
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text=" Address"
            android:id="@+id/textView"
            android:layout_alignParentStart="true"
            android:layout_row="3"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/displayAddresstitle"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_row="3" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/displayAddress"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_row="4"
            android:layout_columnSpan="2"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text=" Elevation"
            android:id="@+id/Elevation"
            android:layout_alignParentStart="true"
            android:layout_row="5"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/displayElevation"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_row="5" />
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text=" Latitude"
            android:id="@+id/Latitude"
            android:layout_alignParentStart="true"
            android:layout_row="6"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/displayLatitude"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_row="6" />
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text=" Longitude"
            android:id="@+id/Longitude"
            android:layout_alignParentStart="true"
            android:layout_row="7"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/displayLongitude"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_row="7" />
    </GridLayout>
</RelativeLayout>
